{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "sscript",
  "rules": {
    "source_file": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "scene"
      }
    },
    "scene": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "{---"
        },
        {
          "type": "STRING",
          "value": "\n"
        },
        {
          "type": "REPEAT1",
          "content": {
            "type": "SEQ",
            "members": [
              {
                "type": "SYMBOL",
                "name": "block"
              },
              {
                "type": "REPEAT",
                "content": {
                  "type": "STRING",
                  "value": "\n"
                }
              }
            ]
          }
        },
        {
          "type": "STRING",
          "value": "---}"
        },
        {
          "type": "STRING",
          "value": "\n"
        }
      ]
    },
    "block": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "dialogue"
        },
        {
          "type": "SYMBOL",
          "name": "action"
        }
      ]
    },
    "action": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "line"
        },
        {
          "type": "STRING",
          "value": "\n"
        }
      ]
    },
    "dialogue": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "character_name"
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SYMBOL",
              "name": "dialogue_paranthesis"
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "SYMBOL",
          "name": "dialogue_line"
        }
      ]
    },
    "character_name": {
      "type": "SEQ",
      "members": [
        {
          "type": "PATTERN",
          "value": "[A-Z \\.]+"
        },
        {
          "type": "STRING",
          "value": "\n"
        }
      ]
    },
    "dialogue_paranthesis": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "("
        },
        {
          "type": "SYMBOL",
          "name": "identifier"
        },
        {
          "type": "STRING",
          "value": ")"
        },
        {
          "type": "STRING",
          "value": "\n"
        }
      ]
    },
    "dialogue_line": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "line"
        },
        {
          "type": "STRING",
          "value": "\n"
        }
      ]
    },
    "string": {
      "type": "PATTERN",
      "value": "\"[^\"]*\""
    },
    "line": {
      "type": "PATTERN",
      "value": "[^\\n]+"
    },
    "identifier": {
      "type": "PATTERN",
      "value": "[a-z]+"
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}